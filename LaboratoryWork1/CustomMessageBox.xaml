<Window x:Class="LaboratoryWork1.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryWork1"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400" ResizeMode="NoResize" Background="#222D33" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3.5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="Icon" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="64" Width="64" Margin="-250 0 0 0"></Image>
        <TextBlock x:Name="Message" Grid.Row="0" Margin="0 0 0 0" TextWrapping="Wrap" VerticalAlignment="Center" MaxWidth="170" Foreground="#fafafa" Text="Message" HorizontalAlignment="Center"></TextBlock>
        <Button x:Name="OkButton" Grid.Row="1" Width="55" Height="25" Content="Ok" Background="#9ae69a" Foreground="#1E1E1E" Click="OkButton_Click"></Button>
    </Grid>
</Window>
